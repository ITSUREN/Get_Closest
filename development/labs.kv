MenuScreen:

<MenuScreen@BoxLayout>:
    orientation: "vertical"
    size_hint: None, None
    size: "300dp","300dp"
    pos_hint: {"center_x":0.5,"center_y":0.5}
    spacing: "70dp"
    Label:
        text: "CHOOSE YOUR NUMBERS"
        font_name: "fonts/Roboto.ttf"
        font_size: "20dp"

        size_hint: None, None
        size: "200dp","20dp"
        pos_hint: {"center_x": 0.5}
    NumberDisplay:
    MenuButtons:  

<NumberDisplay>:
    orientation: "lr-tb"

    size_hint: None, None
    size: "220dp","20dp"
    pos_hint: {"center_x":0.5}
    spacing: "30dp"


<MenuButtons>:
    rows: 2
    cols: 2
    BoxLayout:
        padding: [10,10,40,10]
        Button: 
            text: "SMALL"   
            on_press: root.Small() 
    BoxLayout:
        padding: [40,10,10,10]
        Button:
            text: "BIG"
            on_press: root.Big()
    BoxLayout:
        padding: [10,10,40,10]
        Button:
            text: "CLEAR"
            on_press: root.Clears()
    BoxLayout:
        padding: [40,10,10,10]
        Button: 
            text: "NEXT"
            on_press: root.Next()

<HomeScreen>:
    #Force Method of doing it
    cols:1
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1,None
        spacing: "20dp"
        height: "150dp"
        Label:
            text:"WELCOME TO GET CLOSEST"
            
            font_name: "fonts/Roboto.ttf" #just experimental
            font_size: "20dp" 

            size_hint: None, None
            size: "400dp","30dp"
            pos_hint: {"center_x":0.5}
        Button:
            text: "START"
            
            on_press: root.start()

            size_hint: None, None
            size: "100dp","30dp"
            pos_hint: {"center_x": .5}
    Label:
        
    BoxLayout:
        orientation: "vertical"
        size_hint: None, None
        size: "80dp","50dp"
        Button:
            text: "Profile"
            on_press: root.Profile()
        Button:
            text: "Options"
            on_press: root.Options()
        
    